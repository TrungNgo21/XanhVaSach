<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/input_field"
    android:layout_marginVertical="@dimen/_4sdp"
    android:paddingHorizontal="@dimen/_4sdp"
    android:paddingVertical="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request from:"
        style="@style/GeneralCardHeading2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:riv_corner_radius="@dimen/_200sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_main" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GeneralCardHeading2"
                android:text="afsdfsdfsdfsdf" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GeneralInfoNormal1"
                android:text="afsdfsdfsdfsdf" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/date_icon"
            app:tint="@color/primary_dark"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GeneralInfoNormalHeading"
            android:text="Date: " />

        <TextView
            android:id="@+id/createdDate"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GeneralInfoNormal"
            android:text="20/12/2022 " />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:text="Accept" />

        <Button
            android:id="@+id/rejectBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:backgroundTint="@color/error"
            android:text="Reject" />
    </LinearLayout>


</LinearLayout>